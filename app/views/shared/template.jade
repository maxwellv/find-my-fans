doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href="/") Find My Team
        li.toggle-topbar.menu-icon
          a(href="#") Menu
      section.top-bar-section
        ul.left
          li.name
            input#search(type='search', placeholder='search...', results='0')
        ul.right
            li: a(href="/") Home
            li.divider
            if !user
              li: a(href="/auth") Register/Login
            if user
              li: a(href="/meetups") Meetups
              li.divider
              li: a(href='/')= user ? user.name : 'anon'
              li.divider
              li.has-dropdown.not-click
                a(href='/') &#9881;
                ul.dropdown
                  li: a#showM Create Meetup
                  li: a(href='/profile') Edit Profile
                  li.divider
                  li.has-form
                    form(action='/logout',method='post')
                      button.alert.tiny.radius.expand Logout
    form
      fieldset#createMeetup
        #close close[x]
        legend Create Meetup
        .row
          .small-4.columns
            label Sport
            select#sport
              option(selected=true) &nbsp;
              option(value='hockey') Hockey
              option(value='football') Football
              option(value='basketball') Basketball
              option(value='baseball') Baseball
          .small-4.columns
            label Team
            select#team
          .small-4.columns
            &nbsp;
        .row
          .small-4.columns
            label Games
            select#upcomingGames
          .small-4.columns
            label Team Loyalty
            select#loyalty
              option(selected=true) &nbsp;
              option(value='home') Home
              option(value='away') Away
          .small-4.columns
            &nbsp;
        .row
          .small-8.columns
            label Meetup Location
            input(type='text', name='meetupAddress', placeholder='Address of meetup location')
          .small-4.columns
            label &nbsp;
            button.tiny.radius  Submit

    block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/news.js')
    script(src='/js/source/main.js')

