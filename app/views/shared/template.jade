doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href="/") Find My Team
        li.toggle-topbar.menu-icon
          a(href="#") Menu
      section.top-bar-section
        ul.left
          li.name
            input#search(type='search', placeholder='search...', results='0')
        ul.right
            li: a(href="/") Home
            li.divider
            li: a(href="/")
            li.divider
            li: a(href="/")
            li.has-form
            li: a(href="/auth", style='position: relative; top: -2px; left: -30px;') Register/login
            li.has-form
            li: a(href="/logout", style='position: relative; left: -30px') logout
    .row
      .small-12.columns
        block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
