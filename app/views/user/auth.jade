extends ../shared/template

block content
  h1= title
  if !user
    form(method='post', action='/auth')
      fieldset
        legend Register
        .row
          .small-12.columns
            label Email
            input(name='email', type='text', autofocus=true)
        .ro         input(name='password', type='password')
        .row
          .small-12.columns
            button.small.radius Login
  else
    h1 booty

