extends ../shared/template

block content
  h1= title
  if !user
    .row
      .small-6.columns
        form(method='post', action='/auth')
          fieldset#register
            legend Register
            .row
              .small-12.columns
                label Email
                input(name='email', type='email', autofocus=true)
                label Name
                input(name='name', type='text')
                label Password
                input(name='password', type='password')
            .row
              .small-12.columns
                button.small.radius Register
      .small-6.columns
        form(method='post', action='/login')
          fieldset#login
            legend Login
            .row
              .small-12.columns
                label Email
                input(name='email', type='email')
            .row
              .small-12.columns
                label Password
                input(name='password', type='password')
            .row
              .small-4.columns
                button.small.radius Login
  else
    h1 booty

